{
  "name": "fintrack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": " npm run services:up && npm run services:wait:database && npm run migrations:up && npm run services:wait:dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "services:wait:dev": "node infra/scripts/wait-for-dev.js",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --runInBand --watchAll --verbose",
    "migrations:create": "prisma migrate dev --schema=./infra/schema.prisma --create-only && prisma generate --schema=./infra/schema.prisma",
    "migrations:up": "dotenv -c development -- prisma migrate dev --schema=./infra/schema.prisma && prisma generate --schema=./infra/schema.prisma",
    "migrate:reset": "prisma migrate reset --schema=./infra/schema.prisma --force",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "dotenv-expand": "^12.0.2",
    "firebase": "^11.9.0",
    "next": "15.3.3",
    "next-connect": "^1.0.0-next.4",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.8.0",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^29.5.14",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "async-retry": "^1.3.3",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "sequelize-cli": "^6.6.3",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.4",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
